<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <link href="https://fonts.googleapis.com/css?family=Comfortaa" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.3.1/socket.io.js"></script>
    <title>ChatApp</title>
  </head>

  <body>
    <header>
      <h1>ChatApp</h1>
    </header>

    <audio id="notification-sound">
      <source src="/zvuk-soobsheniya-vk-1.mp3" type="audio/mp3">
    </audio>

    <section>
      <div id="change_username">
        <input id="username" type="text" />
        <button id="send_username" type="button">Change username</button>
      </div>
    </section>
    <section id="input_zone"> 
      <input id="message" class="vertical-align" type="text" />
      <button id="send_message" class="vertical-align" type="button">Send</button>
    </section>
    

    <section id="chatroom">
      <section id="feedback"></section>
    </section>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/emoji-mart.js"></script>
    <script src="https://code.jquery.com/jquery-latest.min.js"></script>
    <script src="chat.js"></script>
  </body>
</html>

 